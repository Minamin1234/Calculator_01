        <Button x:Name="Button_00" Content="0" HorizontalAlignment="Left" Margin="138,368,0,-14" VerticalAlignment="Top" Width="65" Background="#FFDDDDDD" RenderTransformOrigin="0.773,-1.35" Height="65" Click="Click" FontSize="22" Grid.Column="1"/>
        <Button x:Name="Button_Addition" Content="+" HorizontalAlignment="Left" Margin="348,158,0,0" VerticalAlignment="Top" Width="100.25" Background="#FFDDDDDD" RenderTransformOrigin="0.773,-1.35" Height="65" Click="Addition" FontSize="22" Grid.Column="1"/>
        <Button x:Name="Button_Subtraction" Content="-" HorizontalAlignment="Left" Margin="348,228,0,0" VerticalAlignment="Top" Width="100.25" Background="#FFDDDDDD" RenderTransformOrigin="0.773,-1.35" Height="65" Click="Subtraction" FontSize="22" Grid.Column="1"/>
