        <Button x:Name="Button_06" Content="6" HorizontalAlignment="Left" Margin="278,228,0,0" VerticalAlignment="Top" Width="65" Background="#FFDDDDDD" RenderTransformOrigin="0.773,-1.35" Height="65" Click="Click" FontSize="22" Grid.Column="1"/>
        <Button x:Name="Button_07" Content="7" HorizontalAlignment="Left" Margin="138,298,0,0" VerticalAlignment="Top" Width="65" Background="#FFDDDDDD" RenderTransformOrigin="0.773,-1.35" Height="65" Click="Click" FontSize="22" Grid.Column="1"/>
        <Button x:Name="Button_08" Content="8" HorizontalAlignment="Left" Margin="208,298,0,0" VerticalAlignment="Top" Width="65" Background="#FFDDDDDD" RenderTransformOrigin="0.773,-1.35" Height="65" Click="Click" FontSize="22" Grid.Column="1"/>
