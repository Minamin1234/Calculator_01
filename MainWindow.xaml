        <TextBox x:Name="Display_Left" HorizontalAlignment="Left" Height="65" Margin="138,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="168" RenderTransformOrigin="1.067,-0.826" FontSize="48" TextAlignment="Center" Grid.Column="1"/>
        <Button x:Name="Button_01" Content="1" HorizontalAlignment="Left" Margin="138,158,0,0" VerticalAlignment="Top" Width="65" Background="#FFDDDDDD" RenderTransformOrigin="0.773,-1.35" Height="65" Click="Click" FontSize="22" Grid.Column="1"/>
        <Button x:Name="Button_02" Content="2" HorizontalAlignment="Left" Margin="208,158,0,0" VerticalAlignment="Top" Width="65" Background="#FFDDDDDD" RenderTransformOrigin="0.773,-1.35" Height="65" Click="Click" FontSize="22" Grid.Column="1"/>
        <Button x:Name="Button_03" Content="3" HorizontalAlignment="Left" Margin="278,158,0,0" VerticalAlignment="Top" Width="65" Background="#FFDDDDDD" RenderTransformOrigin="0.773,-1.35" Height="65" Click="Click" FontSize="22" Grid.Column="1"/>
        <Button x:Name="Button_04" Content="4" HorizontalAlignment="Left" Margin="138,228,0,0" VerticalAlignment="Top" Width="65" Background="#FFDDDDDD" RenderTransformOrigin="0.773,-1.35" Height="65" Click="Click" FontSize="22" Grid.Column="1"/>
